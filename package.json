{
  "name": "paratii-mediaplayer",
  "version": "0.0.6",
  "description": "Clappr-based video player for Paratii",
  "main": "build/bundle.js",
  "scripts": {
    "dev": "npm run clean && npm run prep && webpack-dev-server -d --content-base ./build --hot --progress --colors",
    "build": "npm run clean && npm run prep && NODE_ENV=production webpack --progress --colors",
    "build:watch": "npm run build -- --watch",
    "prep": "mkdir build/ && mkdir build/public/ && cp src/index.html build/ && cp -r public/* build/public/",
    "clean": "rm -rf build/",
    "prepublishOnly": "npm run build"
  },
  "author": "Yahya",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "css-loader": "^0.28.7",
    "html-loader": "^0.5.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.5"
  },
  "dependencies": {
    "clappr": "^0.2.78",
    "hlsjs-ipfs-loader": "github:ya7ya/hlsjs-ipfs-loader#master",
    "ipfs": "github:ya7ya/js-ipfs#paratii/master",
    "ipfs-bitswap": "^0.17.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paratii-Video/paratii-mediaplayer.git"
  },
  "bugs": {
    "url": "https://github.com/Paratii-Video/paratii-mediaplayer/issues"
  },
  "homepage": "https://github.com/Paratii-Video/paratii-mediaplayer#readme"
}
